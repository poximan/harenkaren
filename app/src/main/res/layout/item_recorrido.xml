<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/num_recorr"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="40dp"
        android:hint="1"
        android:textSize="16dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_observador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Observador"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/area_recorrida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Area recorrida" />

        <TextView
            android:id="@+id/text_meteo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Condicion climatica"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/text_marea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Estado marea" />

        <TextView
            android:id="@+id/textViewTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/aa HH:mm:ss" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/grafRecorr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_graficar"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:layout_gravity="center"/>
</LinearLayout>