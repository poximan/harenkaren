<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.eazegraph.lib.charts.StackedBarChart
        android:id="@+id/stackchart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:egBarWidth="150dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:clickable="true"
        app:backgroundTint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/stackchart"
        app:layout_constraintEnd_toStartOf="@id/cambiarActionButton"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/ic_home"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cambiarActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:clickable="true"
        app:backgroundTint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/homeActionButton"
        app:layout_constraintEnd_toStartOf="@id/new_unsoc_button"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/ic_rotar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_unsoc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:clickable="true"
        app:backgroundTint="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@id/cambiarActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/stackchart"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/ic_add" />

</androidx.constraintlayout.widget.ConstraintLayout>