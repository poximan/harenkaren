<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/censos_button"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:text="Censos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mapa_button"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:text="hoja de ruta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/censos_button" />

    <Button
        android:id="@+id/topicos_button"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:text="TÃ³picos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mapa_button" />

    <Button
        android:id="@+id/desarrolloButton"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="@string/para_desarrollador"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topicos_button"
        android:background="@drawable/boton_redondeado" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

