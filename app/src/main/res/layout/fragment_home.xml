<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    tools:context=".fragment.home.HomeFragment">

    <Button
        android:id="@+id/myReportsButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:text="Mis reportes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myTopicsButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:text="Mis tópicos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myReportsButton" />

    <Button
        android:id="@+id/regulationsButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:text="Reglamentaciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTopicsButton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="215dp"
        android:layout_height="163dp"
        android:layout_marginTop="10dp"
        android:scaleX="-1"
        android:src="@mipmap/elephant_adobenidae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regulationsButton" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="215dp"
        android:layout_height="163dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/elephant_adobenidae"
        app:layout_constraintBottom_toTopOf="@+id/logOutButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goToStatisticsButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Estadísticas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

